{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "type": "object",
    "description": "Represents stock in a checkout process",
    "properties": {
        "orderId": { 
            "type": "string",
            "required": true,
            "descripiton": "external order id, should be unique"
        },
        "state": { 
            "type": "string",
            "enum": ["new", "confirmed", "cancelled"] 
        },
        "items": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "string",
                        "description": "Stock object id"
                    },
                    {
                        "type": "object",
                        "description": "Stock object"
                    }
                ]
            }
        },
        "pickup": {
            "oneOf": [
                {
                    "type": "string",
                    "description": "Pickup object id"
                },
                {
                    "type": "object",
                    "description": "Pickup object"
                }
            ]
        }
	}
}
